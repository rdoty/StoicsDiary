<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appollonius.stoicsdiary.ChoiceFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="50">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/TEXT_PROMPT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:text="@string/prompt_01"
                        tools:text="@string/prompt_01" />

                    <Button
                        android:id="@+id/BUTTON_YES"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:background="#00AA00"
                        android:textSize="50sp"
                        android:text="@string/good_01" />

                    <Button
                        android:id="@+id/BUTTON_NO"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:background="#AA0000"
                        android:textSize="50sp"
                        android:text="@string/bad_01" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="50">

                    <CalendarView
                        android:id="@+id/history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/EDIT_FEELS"
                android:labelFor="@+id/EDIT_FEELS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#AAAAAA"
                android:ems="10"
                android:inputType="textMultiLine" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
